<div class="bg-white p-6 rounded-lg shadow-md">

    <div class="flex justify-between items-center mb-4">
        <h2 class="text-2xl font-bold text-gray-800">Riwayat Peminjaman</h2>
        <a
            href="/member/history/download"
            target="_blank"
            class="px-4 py-2 text-base font-semibold text-white bg-green-600 rounded-lg shadow-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500"
        >
            <i class="fas fa-download mr-2"></i> Download Laporan (PDF)
        </a>
    </div>

    <form method="GET" action="/riwayat" class="mb-4">
        <div class="flex">
            <input
                type="text"
                name="search"
                value="<%= searchTerm %>"
                placeholder="Cari judul, penulis, status (misal: terlambat)..."
                required
                class="w-full px-3 py-2 border border-gray-300 rounded-l-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
            />
            <button
                type="submit"
                class="px-4 py-2 bg-indigo-600 text-white rounded-r-md hover:bg-indigo-700"
            >
                Cari
            </button>
        </div>
    </form>

    <div class="mb-4 text-sm text-gray-600">
        Menampilkan <strong><%= count %></strong> data riwayat peminjaman. <% if
        (searchTerm) { %>
        <span>untuk kata kunci "<%= searchTerm %>"</span>
        <a
            href="/riwayat"
            class="text-sm text-indigo-600 hover:underline inline-block"
            >[Reset Pencarian]</a
        >
        <% } %>
    </div>

    <% if (books.length === 0) { %>
    <div class="text-center py-10">
        <p class="text-gray-500">Anda belum memiliki riwayat peminjaman.</p>
    </div>
    <% } else { %>
    <div class="overflow-x-auto">
        <table class="min-w-full bg-white">
            <thead class="bg-gray-200">
                <tr>
                    <th class="py-2 px-4 text-left">Judul Buku</th>
                    <th class="py-2 px-4 text-left">Penulis</th>
                    <th class="py-2 px-4 text-left">Tanggal Pinjam</th>
                    <th class="py-2 px-4 text-left">Tanggal Kembali</th>
                    <th class="py-2 px-4 text-left">Status</th> <!-- Kolom Baru -->
                </tr>
            </thead>
            <tbody>
                <% books.forEach(book => { %>
                    <% 
                        // --- LOGIKA STATUS ---
                        let statusText = '-';
                        let statusColorClass = '';
                        let rowColorClass = ''; // Reset background per baris

                        if (book.due_date && book.return_date) {
                            const dueDate = new Date(book.due_date);
                            const returnDate = new Date(book.return_date);
                            
                            dueDate.setHours(0, 0, 0, 0);
                            returnDate.setHours(0, 0, 0, 0);
                            
                            const diffTime = returnDate.getTime() - dueDate.getTime();
                            const diffDays = Math.floor(diffTime / (1000 * 60 * 60 * 24));

                            if (diffDays <= 0) {
                                statusText = 'Tepat waktu';
                                statusColorClass = 'text-green-700 font-bold';
                            } else {
                                statusText = `Terlambat ${diffDays} hari`;
                                statusColorClass = 'text-red-700 font-bold';
                                rowColorClass = 'bg-red-50'; // Background merah tipis
                            }
                        }
                    %>
                <tr class="border-b <%= rowColorClass %>">
                    <td class="py-2 px-4 font-medium"><%= book.title %></td>
                    <td class="py-2 px-4 text-gray-600"><%= book.author %></td>
                    <td class="py-2 px-4">
                        <%= new Date(book.borrow_date).toLocaleDateString('id-ID') %>
                    </td>
                    <td class="py-2 px-4 text-green-600">
                        <%= new Date(book.return_date).toLocaleDateString('id-ID') %>
                    </td>
                    <!-- Kolom Status Baru -->
                    <td class="py-2 px-4 <%= statusColorClass %>">
                        <%= statusText %>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    <% } %>
</div>