<div class="flex flex-col pb-6 justify-center items-center">
    <!-- <aside class=" w-1/5 pr-8"> -->
    <aside class="sticky top-0 w-full bg-gray-100 pt-4 pb-2">
        <!-- <h3 class="text-lg font-semibold mb-3">Kategori</h3> -->
        <form method="GET" action="/katalog" class="mb-4">
            <div class="flex">
                <input
                    type="text"
                    name="search"
                    value="<%= searchTerm %>"
                    placeholder="Cari judul, penulis, atau penerbit..."
                    required
                    class="w-full px-3 py-2 border border-gray-300 rounded-l-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
                />
                <button
                    type="submit"
                    class="px-4 py-2 bg-indigo-600 text-white rounded-r-md hover:bg-indigo-700"
                >
                    Cari
                </button>
            </div>
        </form>

        <div class="mb-4 text-sm text-gray-600">
            Menampilkan <strong><%= count %></strong> buku.
            <% if (searchTerm) { %>
                <span>untuk kata kunci "<%= searchTerm %>"</span>
                            <a
                href="/katalog"
                class="text-sm text-indigo-600 hover:underline mt-2 inline-block"
                >[Reset Pencarian]</a
            >
            <% } %>
            <% if (selectedCategory) { %>
                <span>dalam kategori yang dipilih.</span>
            <% } %>
        </div>

        <ul class="space-y-2 flex gap-6 px-4 overflow-x-auto">
            <li>
                <a
                    href="/katalog"
                    class="block text-gray-700 hover:text-indigo-600 <%= !selectedCategory ? 'font-bold text-indigo-600' : '' %>"
                >
                    Semua Kategori
                </a>
            </li>
            <% categories.forEach(category => { %>
            <li>
                <a
                    href="/katalog?kategori=<%= category.id %>"
                    class="block text-gray-700 hover:text-indigo-600 <%= selectedCategory == category.id ? 'font-bold text-indigo-600' : '' %>"
                >
                    <%= category.name %>
                </a>
            </li>
            <% }) %>
        </ul>
    </aside>

    <!-- <main class="w-4/5"> -->
    <main class="w-full px-4">
        <% if (books.length === 0) { %>
        <div class="text-center py-10 bg-white rounded-lg shadow-md">
            <p class="text-gray-500">Tidak ada buku yang ditemukan.</p>
        </div>
        <% } else { %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            <% books.forEach(book => { %>
            <div
                class="bg-white rounded-lg shadow-md overflow-hidden flex flex-col"
            >
                <img
                    src="<%= book.cover_image_url || '/images/default.jpg' %>"
                    alt="Cover <%= book.title %>"
                    class="w-full h-56 object-cover"
                />
                <div class="p-4 flex-1 flex flex-col">
                    <h4
                        class="text-md font-semibold text-gray-800 truncate"
                        title="<%= book.title %>"
                    >
                        <%= book.title %>
                    </h4>
                    <p class="text-sm text-gray-600 mb-2"><%= book.author %></p>

                    <div class="mt-auto pt-2">
                        <% if (book.stock > 0) { %>
                        <span
                            class="text-xs font-medium text-green-800 bg-green-100 px-2.5 py-0.5 rounded-full"
                            >Stok: <%= book.stock %></span
                        >
                        <% } else { %>
                        <span
                            class="text-xs font-medium text-red-800 bg-red-100 px-2.5 py-0.5 rounded-full"
                            >Stok Habis</span
                        >
                        <% } %>
                        <a
                            href="/buku/<%= book.id %>"
                            class="mt-3 block w-full text-center bg-indigo-600 text-white text-sm py-2 rounded-md hover:bg-indigo-700"
                        >
                            Lihat Detail
                        </a>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
        <% } %>
    </main>
</div>
