<div class="bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-2xl font-bold text-gray-800 mb-6">
        Buku yang Sedang Dipinjam
    </h2>

    <form method="GET" action="/dipinjam" class="mb-4">
        <div class="flex">
            <input
                type="text"
                name="search"
                value="<%= searchTerm %>"
                placeholder="Cari judul, penulis, tanggal, bulan, tahun..."
                required
                class="w-full px-3 py-2 border border-gray-300 rounded-l-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
            />
            <button
                type="submit"
                class="px-4 py-2 bg-indigo-600 text-white rounded-r-md hover:bg-indigo-700"
            >
                Cari
            </button>
        </div>
    </form>

    <div class="mb-4 text-sm text-gray-600">
        Menampilkan <strong><%= count %></strong> buku yang sedang dipinjam. <%
        if (searchTerm) { %>
        <span>untuk kata kunci "<%= searchTerm %>"</span>
        <a
            href="/dipinjam"
            class="text-sm text-indigo-600 hover:underline inline-block"
            >[Reset Pencarian]</a
        >
        <% } %>
    </div>

    <% if (books.length === 0) { %>
    <div class="text-center py-10">
        <p class="text-gray-500">Anda tidak sedang meminjam buku.</p>
        <a
            href="/katalog"
            class="mt-4 inline-block px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700"
        >
            Pinjam Buku Sekarang
        </a>
    </div>
    <% } else { %>
    <div class="overflow-x-auto">
        <table class="min-w-full bg-white">
            <thead class="bg-gray-200">
                <tr>
                    <th class="py-2 px-4 text-left">Judul Buku</th>
                    <th class="py-2 px-4 text-left">Penulis</th>
                    <th class="py-2 px-4 text-left">Tanggal Pinjam</th>
                    <th class="py-2 px-4 text-left font-semibold text-red-600">
                        Batas Pengembalian
                    </th>
                </tr>
            </thead>
            <tbody>
                <% books.forEach(book => { %>
                <tr class="border-b">
                    <td class="py-2 px-4 font-medium"><%= book.title %></td>
                    <td class="py-2 px-4 text-gray-600"><%= book.author %></td>
                    <td class="py-2 px-4">
                        <%= new
                        Date(book.borrow_date).toLocaleDateString('id-ID') %>
                    </td>
                    <td class="py-2 px-4 font-medium text-red-600">
                        <%= new Date(book.due_date).toLocaleDateString('id-ID')
                        %>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    <% } %>
</div>
