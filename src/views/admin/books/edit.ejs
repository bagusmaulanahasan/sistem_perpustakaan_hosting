<div class="bg-white p-6 rounded-lg shadow-md">
    <% if (typeof errors !=='undefined' && errors.length> 0) { %>
        <div class="p-4 mb-4 text-sm text-red-800 bg-red-100 rounded-lg" role="alert">
            <span class="font-medium">Terjadi Kesalahan!</span>
            <ul>
                <% errors.forEach(err=> { %>
                    <li class="ml-4 list-disc">
                        <%= err.msg %>
                    </li>
                    <% }) %>
            </ul>
        </div>
        <% } else if (typeof error !=='undefined' && error) { %>
            <div class="p-4 mb-4 text-sm text-red-800 bg-red-100 rounded-lg" role="alert">
                <span class="font-medium">Terjadi Kesalahan!</span>
                <%= error %>
            </div>
            <% } %>
                <form action="/admin/books/update/<%= book.id %>" method="POST" enctype="multipart/form-data">
                    <%- include('_form', { book: book, categories: categories, errors: (typeof errors !=='undefined' ?
                        errors : []) }) %>
                        <div class="mt-6 flex items-center space-x-4">
                            <button type="submit"
                                class="px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700">Update
                                Buku</button>
                            <a href="/admin/books"
                                class="px-4 py-2 bg-gray-200 text-gray-800 rounded-md hover:bg-gray-300">Batal</a>
                        </div>
                </form>
</div>